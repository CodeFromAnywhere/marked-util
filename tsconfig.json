{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["ESNext", "ES2015", "DOM", "DOM.Iterable"],
    "target": "es2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
